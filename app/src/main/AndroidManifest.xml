<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.zealtechconsulting.travelmantics">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- This line will enable picasso to do it's work-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ListActivity"
            android:screenOrientation="portrait"> <!-- This line forces the app to stay in portrait even after the user rotates the screen.-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DealActivity"
            android:screenOrientation="portrait">

        </activity>

    </application>

</manifest>